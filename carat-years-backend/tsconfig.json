{
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": "src",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "sourceMap": false,
    "target": "ES2020",
    "noEmit": false,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "src/@types"],
  "exclude": ["node_modules"]
}
